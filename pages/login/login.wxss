.background {
  height: 100vh;
  background-size: cover !important;
}

text {
  font-size: 140rpx;
  background-color: white;
  color: black;
  border: solid 5rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  margin-top: 20vh;  
}

button {
  margin-top: auto;
  margin-bottom: auto;
  background-color: white;
  color: #91b3b6;
  border: solid 5rpx;
  width: 40vw;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}