<block wx:for="{{items}}" wx:for-item="item" wx:for-index="itemsIndex" wx:key="items">
<!-- CARD -->
  <view class="card">
    <view class="card-img" data-index="{{itemsIndex}}" bindtap="goRecipe" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url('{{item.image_url}}');">
